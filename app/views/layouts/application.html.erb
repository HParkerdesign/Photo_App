<!DOCTYPE html>
<html>
  <head>
    <title>Shutter_Up</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-inverse navbar-toggleable-md bg-inverse">
      <div class="container">
        <%= link_to "Social Hub", root_path, class: "navbar-brand" %>
        <ul class="nav navbar-nav">
          <li class="nav-item"><%= link_to "Home", root_path, class: "nav-link" %></li>
      <% if user_signed_in? %>
          <li class="nav-item"><%= link_to "Tweets", feed_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Articles", items_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "IntaPhotos", root_path, class: "nav-link" %></li>
          <li class="nav-item navbar-right"><%= link_to "Sign Out", signout_path, method: :delete, class: "nav-link" %></li>
      <% else %>
      <li class="nav-item navbar-right"><%= link_to "Sign Up", signup_path, class: "nav-link" %></li>
        <li class="nav-item navbar-right"><%= link_to "Sign In", signin_path, class: "nav-link" %></li>
      <% end %>

        </ul>
      </div>
    </nav>

<!-- Flash -->

	<% flash.each do |name, message| %>
		<%= content_tag(:div, message, class: "alert alert-info #{name}") %>
	<% end %>





    <!-- Page Content -->
    <%= yield %>
    
    <!-- Footer -->
    <footer class="small text-muted">
      <div class="container">
        <hr>
        <center>
          <p>Â© 2016 One Month</p>
        </center>
      </div>
    </footer>

  </body>
</html>
